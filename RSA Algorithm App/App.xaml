<Application x:Class="RSA_Algorithm_App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RSA_Algorithm_App"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Style x:Key="CustomFont" TargetType="Label">
            <Setter Property="FontFamily" Value="Fonts/Satoshi-Bold.otf #Satoshi"></Setter>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Style.Resources>
            <Setter Property="FontFamily" Value="Fonts/Satoshi-Regular.otf #Satoshi"></Setter>
        </Style>

        <Style TargetType="{x:Type Button}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
            <Setter Property="FontFamily" Value="Fonts/Satoshi-Light.otf #Satoshi"></Setter>
        </Style>
    </Application.Resources>
</Application>
